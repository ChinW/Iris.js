    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Linux Launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/src/iris-js.ts",
            "outFiles": ["${workspaceRoot}/types/**/*.js"],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Win Launch",
            "env": {
                "NODE_ENV": "development"
            },
            "program": "${workspaceRoot}\\src\\iris-js.ts",
            "outFiles": ["${workspaceRoot}\\types\\**\\*.js"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "address": "localhost",
            "port": 5858,
            "outFiles": []
        }
    ]
}