{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["es2016", "dom"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "types",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts",
        "**/*.test.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}