{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["es2016", "dom"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "types",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}